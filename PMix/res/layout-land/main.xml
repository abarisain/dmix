<?xml version="1.0" encoding="utf-8"?>

<LinearLayout android:theme="@android:style/Theme.Translucent" android:layout_height="wrap_content" xmlns:android="http://schemas.android.com/apk/res/android" android:orientation="vertical" android:layout_width="fill_parent">

<TextView android:layout_height="wrap_content" android:layout_width="fill_parent" android:gravity="center" android:id="@+id/artistName" android:textSize="25sp"></TextView>
<TextView android:layout_height="wrap_content" android:layout_width="fill_parent" android:gravity="center" android:id="@+id/albumName" android:textSize="20sp"></TextView>
<TextView android:layout_height="wrap_content" android:layout_width="fill_parent" android:gravity="center" android:id="@+id/songName"></TextView><LinearLayout android:layout_height="wrap_content" android:layout_width="wrap_content" android:layout_gravity="center">

<AbsoluteLayout android:layout_width="wrap_content" android:layout_height="wrap_content" android:id="@+id/AbsoluteLayout">
<ImageSwitcher android:layout_height="150px" 
android:layout_width="150px" android:id="@+id/albumCover" android:padding="10px">

</ImageSwitcher>
<ProgressBar android:id="@+id/albumCoverProgress" android:layout_height="120px" android:layout_width="120px" android:layout_x="15px" android:layout_y="15px"></ProgressBar>
</AbsoluteLayout>
<LinearLayout android:layout_height="wrap_content" android:orientation="vertical" android:layout_width="fill_parent" android:layout_gravity="center_vertical"><TextView android:layout_height="wrap_content" android:layout_width="fill_parent" android:gravity="center" android:id="@+id/trackTime" android:textSize="12sp"></TextView><TextView android:layout_height="wrap_content" android:text="@string/track" android:layout_width="fill_parent" android:gravity="center" android:textSize="12sp" android:id="@+id/track"></TextView><SeekBar android:layout_height="wrap_content" android:max="100" android:id="@+id/progress_track" android:layout_width="250dip" android:layout_gravity="center"></SeekBar><TextView android:layout_height="wrap_content" android:gravity="center" android:layout_width="fill_parent" android:text="@string/volume" android:textSize="12sp" android:id="@+id/volume"></TextView><SeekBar android:layout_height="wrap_content" android:id="@+id/progress_volume" android:layout_width="250dip" android:layout_gravity="center"></SeekBar>

</LinearLayout>

</LinearLayout>

<LinearLayout android:layout_width="fill_parent" android:gravity="center" android:layout_height="fill_parent"><ImageButton android:layout_width="wrap_content" android:layout_height="wrap_content" android:src="@android:drawable/ic_media_previous" android:id="@+id/prev"></ImageButton>
<ImageButton android:layout_width="wrap_content" android:layout_height="wrap_content" android:src="@android:drawable/ic_media_rew" android:id="@+id/back"></ImageButton>
<ImageButton android:layout_width="wrap_content" android:layout_height="wrap_content" android:src="@android:drawable/ic_media_play" android:id="@+id/playpause"></ImageButton>
<ImageButton android:layout_width="wrap_content" android:layout_height="wrap_content" android:src="@android:drawable/ic_media_ff" android:id="@+id/forward"></ImageButton>
<ImageButton android:layout_width="wrap_content" android:layout_height="wrap_content" android:src="@android:drawable/ic_media_next" android:id="@+id/next"></ImageButton>


</LinearLayout><TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:id="@+id/mainInfo" android:visibility="invisible"></TextView>
</LinearLayout>
